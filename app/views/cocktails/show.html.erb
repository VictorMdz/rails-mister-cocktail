<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><%= @cocktail.name %></h1>
    <p class="lead">This is the <%= @cocktail.name %> cocktail, do you wanna try?</p>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <%= link_to "Remove",
                  cocktail_dose_path(@cocktail, dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
      </li>
      <% end %>
    </ul>
    <%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>
  </div>
</div>


